{
  "private": true,
  "scripts": {
    "build": "cd apps/backend-api && bun run build; cd ../frontend && bun run build",
    "dev": "concurrently \"cd apps/backend-api && bun run dev\" \"cd apps/frontend && bun run dev\"",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "biome format --write . && biome check --organize-imports-enabled=true --linter-enabled=false --write .",
    "pm2:start": "./scripts/pm2-start.sh",
    "pm2:stop": "./scripts/pm2-stop.sh",
    "pm2:restart": "./scripts/pm2-restart.sh",
    "deploy": "./scripts/deploy.sh"
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "concurrently": "^9.1.0",
    "oxlint": "^1.14.0",
    "prettier": "^3.2.5",
    "vite-plugin-oxlint": "^1.4.0"
  },
  "name": "with-vite",
  "packageManager": "bun@1.2.15",
  "workspaces": ["apps/*"]
}
